<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Post List</title>
  </head>
  <body>
    <h1><%= title %></h1>
    <table>
      <thead>
        <th>Title</th>
        <th>Content</th>
        <th>Author</th>
      </thead>
      <tbody>
        <% for(var i = 0; i< posts.length; i++){%>
          <tr>
            <td><a href="/posts/postdetail/<%= posts[i]._id %>"><%= posts[i].title %></a></td>
            <td><%= posts[i].content %></td>
            <td><%= posts[i].author%></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
